<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <div class="Profile">
      <p class="p_prof">
        <%=  simple_format(@user.profile) %>
      </p>
        <%= link_to "プロフィールの編集", edit_user_path(@user), class: "btn btn-primary" %>
      </section>
      <div>
        <%= link_to "followings", followings_user_path(@user) %> 
      </div>
      <div> 
        <%= link_to "followers", followers_user_path(@user) %> 
      </div>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <%= page_entries_info @microposts %>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= paginate @microposts %>
    <% end %>
  </div>
</div>